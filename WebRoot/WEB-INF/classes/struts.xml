<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.1//EN" "http://struts.apache.org/dtds/struts-2.1.dtd">
<struts>
	<package name="fanc" namespace="/" extends="struts-default">
		<global-results>
			<result name="error">
				/error.jsp
			</result>
		</global-results>
		<!-- 初始化工作 -->
		<action name="init" class="action.ProductCommon" method="init">
			<result>
				/index.jsp
			</result>
		</action>
		<action name="common_*_*_*_*" class="action.{1}" method="{2}">
			<result name="success">
				/{3}.jsp
			</result>
			<result name="input">
				/{4}.jsp
			</result>
			<result name="toIndex">
				/index.html
			</result>
		</action>
	</package>
	<package name="ajax" namespace="/json" extends="json-default">
		<action name="ajaxReq" class="action.ChatRoom" method="publish">
			<result type="json">
				<!-- result是action中设置的变量名，也是页面需要返回的数据，该变量必须有setter和getter方法 -->
				<param name="root">msg</param>
			</result>
		</action>
	</package>
</struts>    
